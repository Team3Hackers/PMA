
<android.support.v4.view.ViewPager
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_height="match_parent"
    andriod:id="@+id/pager"
    andriod:layout_width="match_parent"
    andriod:tag="tab_pager">



    <android.support.v4.view.PagerTitleStrip
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:id="@+id/title"
        andriod:background="#33B5E5"
        andriod:layout_gravity="top"
        andriod:paddingTop="4dp"
        andriod:paddingBottom="4dp">
    </android.support.v4.view.PagerTitleStrip>

</android.support.v4.view.ViewPager>
