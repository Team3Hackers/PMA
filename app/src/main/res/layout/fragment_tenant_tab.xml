<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/property_detail"
android:layout_width="fill_parent"
android:layout_height="fill_parent" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Tenant last name"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Last name of tenant"
        android:textColor="#ff222222"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Tenant first name"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="First name of tenant"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Address"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Permant address of tenant"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="City"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="State"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textState"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:textColor="#ff222222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Zip Code"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:inputType="textMultiLine|textAutoCorrect"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="FICO"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textFico"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tenant's FICO score"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/property_save_button"
        android:text="Save" />

</LinearLayout>

</ScrollView>